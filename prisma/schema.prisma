generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ===================== Enums =====================
 */
enum CaseState {
  joined
  hall_chosen
  room_number_entered
  awaiting_ra
  approved
  denied
  expired
}

enum ActorType {
  user
  ra
  system
}

enum DecisionType {
  approve
  deny
}

enum OutboxStatus {
  pending
  sent
  failed
}

enum OutboxKind {
  dm
  channel
}

/**
 * ===================== Models =====================
 */

model VerificationCase {
  id        String    @id @default(cuid())
  userId    String
  term      String
  state     CaseState
  hall      String?
  roomNumber String?
  room      String?
  raUserId  String?
  expiresAt DateTime?
  reminderSentAt DateTime?
  version   Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Back-relations
  auditLogs   AuditLog[] @relation("CaseToAuditLogs")
  decision    Decision?  @relation("CaseToDecision")
  outboxItems Outbox[]   @relation("CaseToOutbox")

  @@index([userId, term])
  @@index([state])
  @@map("cases")
}

model AuditLog {
  id             String     @id @default(cuid())
  caseId         String
  actorType      ActorType
  actorId        String?
  action         String
  fromState      CaseState?
  toState        CaseState?
  payload        Json?
  idempotencyKey String?
  timestamp      DateTime   @default(now())

  case VerificationCase @relation("CaseToAuditLogs", fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId, timestamp])
  @@index([idempotencyKey])
  @@map("audit_logs")
}

model Decision {
  id             String       @id @default(cuid())
  caseId         String       @unique
  raUserId       String
  decision       DecisionType
  reason         String?
  decidedAt      DateTime     @default(now())
  idempotencyKey String       @unique

  case VerificationCase @relation("CaseToDecision", fields: [caseId], references: [id], onDelete: Cascade)

  @@map("decisions")
}

model Outbox {
  id             String       @id @default(cuid())
  caseId         String?
  kind           OutboxKind
  template       String
  payload        Json?
  status         OutboxStatus @default(pending)
  attempts       Int          @default(0)
  lastError      String?
  nextAttemptAt  DateTime?
  idempotencyKey String?      @unique

  case VerificationCase? @relation("CaseToOutbox", fields: [caseId], references: [id], onDelete: SetNull)

  @@index([status, nextAttemptAt])
  @@map("outbox")
}

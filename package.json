{
  "name": "purplepal",
  "version": "1.0.0",
  "description": "A handy dandy discord bot used to verify residents :)",
  "main": "index.js",
  "bin": {
    "purplepal": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "build": "tsc",
    "cli": "ts-node src/cli/index.ts",
    "health": "ts-node src/core/services/healthCheck.ts",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "commands:sync": "ts-node scripts/registerCommands.ts",
    "sanity:active-case": "ts-node prisma/sanityActiveCase.ts",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db && sleep 3 && npx prisma migrate deploy",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f bot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RayTsai13/PurplePal.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/RayTsai13/PurplePal/issues"
  },
  "homepage": "https://github.com/RayTsai13/PurplePal#readme",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "discord.js": "^14.23.2",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "prisma": "^6.17.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
